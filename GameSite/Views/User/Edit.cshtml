@model GameSite.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit Profile";
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="AvatarPath" class="form-label">Avatar URL</label>
        <input asp-for="AvatarPath" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="avatarFile">Upload Avatar</label>
        <input type="file" name="avatarFile" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
