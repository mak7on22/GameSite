@model GameSite.Models.ApplicationUser
@{
    ViewData["Title"] = "Game";
}

<div class="row">
    <div class="col-md-6">
        <h2>Game</h2>
        <p>Your XP: @Model?.XP</p>

        <form asp-action="AddXp" method="post">
            <input type="hidden" name="amount" value="10" />
            <button type="submit" class="btn btn-primary">Gain 10 XP</button>
        </form>
    </div>
    <div class="col-md-6">
        <div id="webgl-container">
            <canvas id="webgl-canvas"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/three@0.164/build/three.min.js"></script>
    <script src="~/js/game-animation.js" asp-append-version="true"></script>
}
